<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Form_Add_New">

        <TextView
            android:id="@+id/FormName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:paddingLeft="10sp"
            android:paddingTop="20sp"
            android:paddingRight="10sp"
            android:paddingBottom="20sp"
            android:text="New Patent Application Form"
            android:textAllCaps="true"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_below="@id/FormName"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="55sp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="30sp"
            android:background="#ACA1A1" />

        <EditText
            android:id="@+id/PAN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/FormName"
            android:layout_gravity="center"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:hint="Enter Patent Application Number"
            android:inputType="number"
            android:paddingLeft="10sp"
            android:paddingTop="20sp"
            android:paddingRight="10sp"
            android:paddingBottom="20sp"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/PAN"
            android:layout_gravity="center"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:hint="Enter Applicant Name"
            android:inputType="textPersonName"
            android:paddingLeft="10sp"
            android:paddingTop="20sp"
            android:paddingRight="10sp"
            android:paddingBottom="20sp"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/ProvisionalLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnProvisionalDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/rounded_corner"
                android:padding="10sp"
                android:paddingBottom="0dp"
                android:text="Provisional Filing Date"
                android:textAllCaps="true"
                app:backgroundTint="#673AB7" />

            <TextView
                android:id="@+id/ProvisionaldateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="12dp"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:paddingBottom="5sp"
                android:text="Not selected"
                android:textAllCaps="true"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/CompleteLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ProvisionalLL">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCompleteDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/rounded_corner"
                android:padding="10sp"
                android:paddingBottom="0dp"
                android:text="Complete Filing Date"
                android:textAllCaps="true"
                app:backgroundTint="#673AB7" />

            <TextView
                android:id="@+id/CompletedateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="12dp"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:paddingBottom="5sp"
                android:text="Not selected"
                android:textAllCaps="true"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/RequestForExamLL"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/CompleteLL">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRequestForExamDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:layout_marginTop="15dp"

                android:layout_marginBottom="15dp"
                android:background="@drawable/rounded_corner"
                android:padding="10sp"
                android:paddingBottom="0dp"
                android:text="Request for Examination Date"
                android:textAllCaps="true"
                app:backgroundTint="#673AB7" />

            <TextView
                android:id="@+id/RequestForExamText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:layout_marginTop="12dp"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:paddingBottom="5sp"
                android:text="Not selected"
                android:textAllCaps="true"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/PublicationLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/RequestForExamLL">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPublicationDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/rounded_corner"
                android:padding="10sp"
                android:paddingBottom="0dp"
                android:text="Publication Date"
                android:textAllCaps="true"
                app:backgroundTint="#673AB7" />

            <TextView
                android:id="@+id/PublicationDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="12dp"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:paddingBottom="5sp"
                android:text="Not selected"
                android:textAllCaps="true"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/Form1LL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/PublicationLL">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnForm1Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/rounded_corner"
                android:padding="10sp"
                android:paddingBottom="0dp"
                android:text="Form1 Filing Date"
                android:textAllCaps="true"
                app:backgroundTint="#673AB7" />

            <TextView
                android:id="@+id/Form1Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="12dp"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:paddingBottom="5sp"
                android:text="Not selected"
                android:textAllCaps="true"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/Form3LL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Form1LL">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnForm3Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/rounded_corner"
                android:padding="10sp"
                android:paddingBottom="0dp"
                android:text="Form3 Filing Date"
                android:textAllCaps="true"
                app:backgroundTint="#673AB7" />

            <TextView
                android:id="@+id/Form3Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="12dp"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:paddingBottom="5sp"
                android:text="Not selected"
                android:textAllCaps="true"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Form5LL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Form3LL">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnForm5Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/rounded_corner"
                android:padding="10sp"
                android:paddingBottom="0dp"
                android:text="Form5 Filing Date"
                android:textAllCaps="true"
                app:backgroundTint="#673AB7" />

            <TextView
                android:id="@+id/Form5Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="12dp"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:paddingBottom="5sp"
                android:text="Not selected"
                android:textAllCaps="true"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Form18LL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Form5LL">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnForm18Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/rounded_corner"
                android:padding="10sp"
                android:paddingBottom="0dp"
                android:text="Form18 Filing Date"
                android:textAllCaps="true"
                app:backgroundTint="#673AB7" />

            <TextView
                android:id="@+id/Form18Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="12dp"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:paddingBottom="5sp"
                android:text="Not selected"
                android:textAllCaps="true"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Form26LL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Form18LL">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnForm26Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/rounded_corner"
                android:padding="10sp"
                android:paddingBottom="0dp"
                android:text="Form26 Filing Date"
                android:textAllCaps="true"
                app:backgroundTint="#673AB7" />

            <TextView
                android:id="@+id/Form26Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="12dp"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:paddingBottom="5sp"
                android:text="Not selected"
                android:textAllCaps="true"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/FERreceivedLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Form26LL">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFERreceivedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/rounded_corner"
                android:padding="10sp"
                android:paddingBottom="0dp"
                android:text="FER Received Date"
                android:textAllCaps="true"
                app:backgroundTint="#673AB7"/>

            <TextView
                android:id="@+id/FERreceivedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="12dp"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:paddingBottom="5sp"
                android:text="Not selected"
                android:textAllCaps="true"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/FERresponseSubmittedLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/FERreceivedLL">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFERresponseSubmittedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/rounded_corner"
                android:padding="10sp"
                android:paddingBottom="0dp"
                android:text="FER Response Submitted Date"
                android:textAllCaps="true"
                app:backgroundTint="#673AB7" />

            <TextView
                android:id="@+id/FERresponseSubmittedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:paddingBottom="5sp"
                android:text="Not selected"
                android:textAllCaps="true"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ExaminationLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/FERresponseSubmittedLL">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnExaminationDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/rounded_corner"
                android:padding="10sp"
                android:paddingBottom="0dp"
                android:text="Examination Date"
                android:textAllCaps="true"
                app:backgroundTint="#673AB7"/>

            <TextView
                android:id="@+id/ExaminationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="12dp"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:paddingBottom="5sp"
                android:text="Not selected"
                android:textAllCaps="true"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/GrantLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ExaminationLL">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGrantDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/rounded_corner"
                android:padding="10sp"
                android:paddingBottom="0dp"
                android:text="Grant Date"
                android:textAllCaps="true"
                app:backgroundTint="#673AB7"/>

            <TextView
                android:id="@+id/GrantText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="12dp"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:paddingBottom="5sp"
                android:text="Not selected"
                android:textAllCaps="true"
                android:textStyle="bold" />
        </LinearLayout>

        <EditText
            android:id="@+id/Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/GrantLL"
            android:layout_gravity="center"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:hint="Enter Patent Title"
            android:inputType="text"
            android:paddingLeft="10sp"
            android:paddingTop="20sp"
            android:paddingRight="10sp"
            android:paddingBottom="20sp"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/Status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Title"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="Status"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/SpCountry"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="0sp"
                android:entries="@array/options"
                android:textSize="30sp" />
        </LinearLayout>

        <RadioGroup
            android:id="@+id/InvoiceReceived"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Status"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="35dp"
                android:text="Invoice Received Status"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/Received"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Yes"
                android:textSize="15dp" />

            <RadioButton
                android:id="@+id/NotReceived"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="No"
                android:textSize="15dp" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/InvoiceForwarded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/InvoiceReceived"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="30dp"
                android:text="Invoice Forwarded Status"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/Forwarded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Yes"
                android:textSize="15dp" />

            <RadioButton
                android:id="@+id/NotForwarded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="No"
                android:textSize="15dp" />
        </RadioGroup>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/InvoiceForwarded"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_corner"
            android:text="Click To Submit"
            android:textColor="#F5FBF6"
            app:backgroundTint="#673AB7"/>

    </RelativeLayout>
</ScrollView>